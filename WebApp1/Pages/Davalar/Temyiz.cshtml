@page
@model WebApp1.Pages.Davalar.TemyizModel
@{
}

<div class="border container" style="padding:30px;">
    <form method="post">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Temyiz.DavaKayitNo"></label>
            </div>
            <div class="col-6">
                @{
                    var id = Request.QueryString.ToString();
                    string[] tokens = id.Split("=");
                }
                @tokens[1]
                <input asp-for="Temyiz.DavaKayitNo" value="@tokens[1].ToString()" type="hidden" class="form-control" />
                  
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Temyiz.TemyizEdenPetkim"></label>
            </div>
            <div class="col-6">
                <input asp-for="Temyiz.TemyizEdenPetkim" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Temyiz.TemyizTarihi"></label>
            </div>
            <div class="col-6">
                <input asp-for="Temyiz.TemyizTarihi" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Temyiz.TemyizSonucu"></label>
            </div>
            <div class="col-6">
                <input asp-for="Temyiz.TemyizSonucu" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Temyiz.Aciklama"></label>
            </div>
            <div class="col-6">
                <input asp-for="Temyiz.Aciklama" class="form-control" />
            </div>
        </div>

        <div class="form-group row offset-4">
            <div class="col-3">
                <input type="submit" value="Güncelle" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Geri dön</a>
            </div>
        </div>

    </form>
</div>
