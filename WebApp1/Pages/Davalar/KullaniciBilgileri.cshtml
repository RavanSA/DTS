@page
@model WebApp1.Pages.Davalar.KullaniciBilgileriModel
@{
}


<div class="form-row">
    <div class="form-group col-md-8">
        <h4>Kullanıcı bilgileri güncelle</h4>
    </div>

</div>

<div class="border container" style="padding:30px;">
    <form method="post">

        <center>
            <div class="form-row">
                <div class="form-group col-md-12 txt-center">
                    <h4>Kullanıcı bilgilerini güncelle</h4>
                    <h5>@Model.users.UserName</h5>
                </div>
            </div>
        </center>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="input.UserFullName"> Kullanıcı İsmi</label>
            </div>
            <div class="col-4">
                <input asp-for="input.UserFullName" class="form-control" value="@Model.users.UserFullName" />
                <span asp-validation-for="input.UserFullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="input.UserDuty"> Kullanıcı Görevi</label>
            </div>
            <div class="col-4">
                <input asp-for="input.UserDuty" class="form-control" value="@Model.users.UserDuty"/>
                <span asp-validation-for="input.UserDuty" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="input.PhoneNumber"> Telefon Numarası</label>
            </div>
            <div class="col-4">
                <input asp-for="input.PhoneNumber" class="form-control" value="@Model.users.PhoneNumber"/>
                <span asp-validation-for="input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="input.Password">Şifre</label>
            </div>
            <div class="col-4">
                <input asp-for="input.Password" class="form-control" value="@Model.users.PasswordHash" />
                <span asp-validation-for="input.Password" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="input.ConfirmPassword"> Tekrar Şifre</label>
            </div>
            <div class="col-4">
                <input asp-for="input.ConfirmPassword" class="form-control" value="@Model.users.PasswordHash"/>
                <span asp-validation-for="input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group row">
            <div class="col-4">
                <button type="submit" class="btn btn-dark btn-search">Kaydet</button>
            </div>
        </div>
    </form>
</div>