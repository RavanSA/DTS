@using WebApp1.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidenav.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>


<body class="home" style="overflow-x: hidden; height:100vh;">
    <div class="display-table" style="overflow-y:hidden;">
        <div class="row display-table-row">
            <div >
            <div class="col-md-2 col-sm-1" id="navigation">
                <div class="logo">
                    <h1 style="color:white;">DTS</h1>
                </div>
                <div class="navi">
                    <ul>
                        <li class="active"><a asp-area="" asp-page="/Davalar/Index"><i class="fa fa-file-text-o" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Tüm Davalar</span></a></li>
                        @if (User.IsInRole(Roles.Role_Admin))
                        {
                            <li class="active"><a asp-area="" asp-page="/Arama/Arama"><i class="fa fa-search" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Arama</span></a></li>
                            <li class="active"><a asp-area="" asp-page="/Rapor/Rapor"><i class="fa fa-file" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Rapor</span></a></li>
                            <div class="dropdown">
                                <li class="active dropbtn"><a asp-area="" asp-page="/Rapor/Rapor"><i class="fa fa-cog" aria-hidden="true"></i> <span class="hidden-xs hidden-sm">Ayarlar</span></a></li>
                                <div class="dropdown-content">
                                    <a id="register" asp-area="Identity" asp-page="/Account/Register">Kullanıcı Oluştur</a>
                                    <a href="#">Kullanıcıları görüntüle</a>
                                </div>
                            </div>
                        
                            
                            }

                    </ul>
                    <div class="sidebar-footer">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
                </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <div class="row">
                   
                </div>
                <div class="user-dashboard" style="width:100%;">
                    <br />
                    <br />
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>




