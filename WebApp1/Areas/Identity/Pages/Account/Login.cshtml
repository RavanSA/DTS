@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}



@using WebApp1.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidenav.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>


<body class="home" style="overflow-x: hidden; height:100vh;padding:2em;">
    <div class="border container">
            <form id="account" method="post">
                <center>
                    <div class="form-row">
                        <div class="form-group col-md-12 txt-center">
                            <h2> DTS</h2> <br />
                            <h3> Giriş</h3>
                        </div>
                    </div>
                    </center>
                <div class="input-center">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group row">
                    <div class="col-4 input-center">
                        <label asp-for="Input.Email"> Email </label>
                        
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div> 
                </div>
                <div class="form-group row">
                    <div class="col-4 input-center">
                        <label asp-for="Input.Password"> Şifre </label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 input-center">
                    <button type="submit" class="btn btn-dark btn-search">Giriş</button>
                    </div>
                </div>
                @*<div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>*@
            </form>
        </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    </body>
</html>