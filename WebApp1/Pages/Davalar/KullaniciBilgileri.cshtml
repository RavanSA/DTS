@page
@model WebApp1.Pages.Davalar.KullaniciBilgileriModel
@using WebApp1.Models 
@{
}




@if (User.IsInRole(Roles.Role_Admin))
{
    <form method="post">

        <div class="panel panel-deafult" style="width:100%;height:100%;">



            <div class="panel-heading" style="background-color:#f5f5f5">
                <table>
                    <tbody>
                        <tr>
                            <td style="width:80%">
                                <span>Kullanıcı Bilgileri Güncelle</span>
                            </td>
                            <td style="text-align:right;">
                                <span>

                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>


            <table id="davaBilgi" class="table table-hover" style="width:100%;font-size:11px;">
                <tbody>
                    <tr>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <td>
                            <b>Kullanıcı İsmi</b>
                        </td>
                        <td>
                            <input asp-for="input.UserFullName" class="form-control w-50" value="@Model.users.UserFullName" />
                            <span asp-validation-for="input.UserFullName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Kullanıcı Görevi</b>
                        </td>
                        <td>
                            <input asp-for="input.UserDuty" class="form-control w-50" value="@Model.users.UserDuty" />
                            <span asp-validation-for="input.UserDuty" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Telefon Numarası</b>
                        </td>
                        <td>
                            <input asp-for="input.PhoneNumber" class="form-control w-50" value="@Model.users.PhoneNumber" />
                            <span asp-validation-for="input.PhoneNumber" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Şifre</b>
                        </td>
                        <td>
                            <input asp-for="input.Password" class="form-control w-50" value="@Model.users.PasswordHash" />
                            <span asp-validation-for="input.Password" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Tekrar Şifre</b>
                        </td>
                        <td>
                            <input asp-for="input.ConfirmPassword" class="form-control w-50" value="@Model.users.PasswordHash" />
                            <span asp-validation-for="input.ConfirmPassword" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                    <tr>
                        <td>
                            <b>Kullanıcı Tipi</b>
                        </td>
                        <td>
                            <select asp-for="input.Role" asp-items="@Model.input.RoleList" class="form-control w-50">
                                <option disabled selected> Roles </option>
                            </select>
                        </td>
                    </tr>
                    </tr>

                </tbody>
            </table>
        </div>
        <button type="submit" class="btn btn-default btn-xs" style="width:20%;font-size:18px;">Güncelle</button>
    </form>
}
else
{
    <h1>Yetki Yok</h1>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}